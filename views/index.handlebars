<div class="container">
    <header class="text-center">
        <h1>Eat Da Burger!</h1>
        <img src="/assets/img/burger-151421.png" width="200px" alt="burger">
    </header>
    <div class="row">
        <div class="col-md-6">
        {{#each burger_flavor}}
            {{#unless this.devoured}}
                {{this.id}}. {{this.burger_name}}
                <form class="eat-list">
                <button type="submit" value={{this.id}} class="btn_id">Devour it!</button>
                </form>
            {{/unless}}
        {{/each}}
        </div>
        <div class="col-md-6">
        <h2>Devoured</h2>
        {{#each burger_flavor}}
            {{#if this.devoured}}
                <ul>
                    {{this.id}}. {{this.burger_name}}
                </ul>
            {{/if}}
        {{/each}}
        </div>
    </div>
</div>
<div class="container">
    <form action="/burgers/create" method="POST">
        <input type="text" class="form-control text-center" placeholder="Submit a burger you'd like to eat" name="burger_name">
        <button type="submit">Submit</button>
    </form>
</div>