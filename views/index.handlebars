<h1>Eat Da Burger!</h1>
<img src="/assets/img/burger-151421.png" width="200px" alt="burger">
    
    {{#each burger_flavor}}
        {{#unless this.devoured}}
            {{this.id}}. {{this.burger_name}}
            <form class="eat-list">
            <button type="submit" value={{this.id}} class="btn_id">Devour it!</button>
            </form>
        {{/unless}}
    {{/each}}
    
<h2>Devoured</h2>
    {{#each burger_flavor}}
        {{#if this.devoured}}
            <ul>
                {{this.id}}. {{this.burger_name}}
            </ul>
        {{/if}}
    {{/each}}